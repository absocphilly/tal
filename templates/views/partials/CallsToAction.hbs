<!-- call to action start -->
{{#each callsToAction}}
<!-- ================ -->
  {{#if button}}
  <div class="dark-bg default-hovered footer-top animated-text">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="call-to-action text-center">
            <div class="row">
              <div class="col-md-8">
                <h2 class="mt-4">{{button.normalText}}</h2>
                <h2 class="mt-4">{{button.hoverText}}</h2>
              </div>
              <div class="col-md-4">
                <p class="mt-3"><a href="{{button.href}}" class="btn btn-animated btn-lg btn-gray-transparent">{{button.buttonText}}<i class="fa fa-{{button.buttonIcon}} pl-20"></i></a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{else if userForm}}
  <div class="main-container dark-translucent-bg" style="background-image:url('/images/background-img-6.jpg');">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-auto">
          <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title">{{userForm.headingText}}</h2>
              <form class="form-horizontal">
                <div class="form-group has-feedback row">
                  <label for="inputEmail" class="col-md-3 control-label text-md-right col-form-label">Email <span class="text-danger small">*</span></label>
                  <div class="col-md-8">
                    <input type="email" class="form-control" id="inputEmail" placeholder="Email" required>
                    <i class="fa fa-envelope form-control-feedback pr-4"></i>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="ml-md-auto col-md-9">
                    <button type="submit" class="btn btn-group btn-default btn-animated">{{userForm.buttonText}} <i class="fa fa-{{userForm.buttonIcon}}"></i></button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{else if userFormEmail}}
  <div class="main-container dark-translucent-bg" style="background-image:url('/images/background-img-6.jpg');">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-auto">
          <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title">{{userFormEmail.headingText}}</h2>
              <form class="form-inline" action="{{userFormEmail.href}}" method="post">
                <div class="input-group has-feedback col-md-8 mb-2 px-0">
                  <label for="UserFormEmailInputEmail" class="control-label sr-only">Email <span class="text-danger small">*</span></label>
                  <input type="email" class="form-control" id="UserFormEmailInputEmail" name="email" placeholder="Email" required>
                  <i class="fa fa-envelope form-control-feedback pr-4"></i>
                  <input type="hidden" name="campaign" value="{{userFormEmail.campaign}}"></input>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3 mb-2 px-0 text-left">
                  <button type="submit" class="btn btn-group btn-default btn-animated">{{userFormEmail.buttonText}} <i class="fa fa-{{userFormEmail.buttonIcon}}"></i></button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{else if like}}
  <div class="main-container dark-translucent-bg" style="background-image:url('/images/background-img-6.jpg');">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-auto">
          <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
            <div class="form-block p-30 light-gray-bg border-clear">
              <h2 class="title my-0">{{like.headingText}}</h2>
              <div class="row my-2">
                <div class="col-sm-5"></div>
                <div class="col-sm-2 text-center">
                  <button type="submit" class="btn btn-group btn-default btn-animated">Like <i class="fa fa-facebook"></i></button>
                </div>
                <div class="col-sm-5"></div>
              </div>
              <h2 class="title my-0 text-right">{{like.footerText}}</h2>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
{{/each}}
<!-- call to action end -->